<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.NewGameDialog"
            prefHeight="70.0" prefWidth="300.0" style="-fx-background-color: #99ccff">
    <content>
        <GridPane vgap="10" hgap="10" style="-fx-background-color: #99ccff">
            <Label text="Row size:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="rowSize" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-background-color: #cce6ff"/>
            <Label text="Column size:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="columnSize" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-background-color: #cce6ff"/>
        </GridPane>
    </content>

</DialogPane>

